{
  "name": "native-image-diff",
  "keywords": [
    "diff",
    "image",
    "png",
    "comparison",
    "visual"
  ],
  "version": "0.2.0",
  "description": "A simple library for comparing two images using a native C++ binding.",
  "main": "dist/index.js",
  "author": "Frederick Gnodtke",
  "license": "MIT",
  "gypfile": true,
  "scripts": {
    "install": "node scripts/install.js",
    "prebuild": "node-gyp rebuild -j 8",
    "build": "tsc -p tsconfig-production.json --sourceMap",
    "postbuild": "node scripts/rename.js",
    "test": "cross-env TZ=UTC jest",
    "lint": "eslint",
    "clean": "rm -rf dist build",
    "docs": "typedoc --out docs/ --exclude '**/test-*.ts' src/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Prior99/native-image-diff"
  },
  "files": [
    "index.d.ts",
    "./dist",
    "./docs",
    "./images",
    "./scripts",
    "./src",
    "./LICENSE",
    "./README.md"
  ],
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "lines": 100,
        "functions": 100,
        "branches": 100
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.(ts|js)"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^18.0.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nan": "^2.18.0",
    "node-gyp": "^10.0.1",
    "node-libpng": "github:Mailbutler/node-libpng#v0.3.2",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "request": "^2.88.0"
  }
}
